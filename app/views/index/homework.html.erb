                      <% @class_units.each do |clz| %>
                        <label class=" col-sm-4">
                          <span class="_hide class_unit_id"><%= clz.id %></span>
                          <input type="checkbox"><%= clz.name %>
                        </label>
                      <% end %>
                    </div>
                  </div>
                </div>
              </form>
           </div>
           <div class="modal-footer">
              <button type="button" class="btn btn-default"
