           <thead>
             <tr>
               <th>作业名称</th>
               <th>发布时间</th>
               
             </tr>
           </thead>
           <tbody>

              <% @homeworks.each do |hw| %>
                <tr class="homework_item">
                  <td><span class="homework_course_id" style="display:none"><%= hw.course_id %></span><a href="" class="homework_details"><%= hw.name %></a><span class="homework_id" style="display:none"><%= hw.id %></span></td>               
